{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "esnext",
      "dom.iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "sourceMap": true,
    "types": [
      "jest"
    ],
    "baseUrl": "./",
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "*.test.js",
    "*.test.jsx",
    "*.spec.js",
    "*.spec.jsx"
  ],
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    ".eslintrc.json"
  ]
}
